@{
    ViewData["Title"] = "Login - SuperAdmin";
    Layout = "_Layout";
}
@model IFormCollection

<div>
    <h6 class="text-center display-5" style="font-size:20px">Super Admin</h6>
    <div class="container-fluid">
        <div class="col-md-4">
            <h3 class="text-center">Login</h3>
            @if(@ViewData.ContainsKey("msg") && @ViewData["msg"]!="")
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="message">
                    @ViewData["msg"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <form asp-action="CheckCredentials" asp-area="superadmin" asp-controller="Auth" method="post">
                <div class="form-group">
                    <label class="text-secondary mb-2" for="userName">Username</label>
                    <input type="text" class="form-control" name="username" id="userName" placeholder="Enter Username">
                    <small id="userNameHelp" class="form-text text-danger d-none">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group mt-3">
                    <label class="text-secondary mb-2" for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password">
                    <small id="passwrdHelp" class="form-text text-danger d-none">We'll never share your email with anyone else.</small>
                </div>
                <input type="hidden" name="type" value="superadmin" hidden />
                <div class="form-text mb-2">
                    <a class="link-primary text-decoration-none" href="https://localhost:7154/superadmin/ForgotPassword">Forgot Password?</a>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="remember_me" />
                    <label class="form-check-label">Rememeber Me</label>
                </div>
                <button type="submit" class="btn btn-primary primary-color-theme mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>
